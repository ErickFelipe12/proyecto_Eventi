@model EventiApp.Models.Event

@{
    ViewBag.Title = "Eventi";
}
@Html.ActionLink(".", "Index", null, new { @class = "btn  btn-danger px-3 bi bi-skip-backward" })
<h2 class="text-center">Editar Evento</h2>
<hr />
<br />

@using (Html.BeginForm())
{



    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.IdEvent)
    @Html.HiddenFor(model => model.IdClient)



<div class="align-content-center" style="position:relative; left:170px;">


    <div class="row pt-2">
        <div class="form-group col-md-4 ">



            <div class="col-md-12">
                <i class="bi bi-geo-alt">Lugar Evento</i>

                @Html.EditorFor(model => model.Place, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Place, "", new { @class = "text-danger" })
            </div>

        </div>
        <br />
        <div class="form-group  col-md-4">


            <div class="col-md-12 bi">
                <i class="bi bi-shop-window"> Tipo de Evento</i>

                @Html.EditorFor(model => model.Type, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
            </div>
            <br />
        </div>
    </div>


    <div class="row pt-2">

        <div class="form-group  col-md-4">


            <div class="col-md-12">
                <i class="bi bi-calendar-event"> Fecha </i>

                @*@Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.TextBoxFor(model => model.Date, new { @type = "date", @class = "form-control datepicker" })
                @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group col-md-4 ">


            <div class="col-md-12">
                <i class="bi bi-clock-history"> Hora </i>
                @*@Html.EditorFor(model => model.Hour, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.TextBoxFor(model => model.Hour, new { @type = "time", @class = "form-control datepicker" })
                @Html.ValidationMessageFor(model => model.Hour, "", new { @class = "text-danger" })
            </div>
            <br />
        </div>
    </div>

    <div class="form-group  col-md-8">
        Descripción
        <div class="col-md-12">
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />




    <div class="form-group py-3" style="position:relative; left:59%;">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Guardar" class="btn btn-outline-success " />

        </div>
    </div>
</div>

}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
