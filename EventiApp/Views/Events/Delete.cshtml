@model EventiApp.Models.Event
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

@{
    ViewBag.Title = "Cancelar evento";
}
@Html.ActionLink(".", "Index", null, new { @class = "btn btn-lg btn-danger bi bi-skip-backward" })
<h3 class="text-center">¿Esta seguro de cancelar este evento?</h3>
<div>
    <hr />
    <br />
    <br />

    <table class="table table-striped table-hover table-bordered">
        <tr>
            <th class="text-center">
                Organiza
            </th>
            <th class="text-center bi bi-geo-alt">
                @Html.DisplayNameFor(model => model.Place)
            </th>

            <th class="text-center bi bi-shop-window">
                @Html.DisplayNameFor(model => model.Type)
            </th>

            <th class="text-center">
                Descripción
            </th>

            <th class="text-center bi bi-clock-history">
                @Html.DisplayNameFor(model => model.Hour)
            </th>
            <th class="text-center bi bi-calendar-event">
                @Html.DisplayNameFor(model => model.Date)
            </th>

        </tr>

        <tr>
            <td class="text-center">
                @Html.DisplayFor(model => model.Client.User.Name)
            </td>
            <td class="text-center">
                @Html.DisplayFor(model => model.Place)
            </td>
            <td class="text-center">
                @Html.DisplayFor(model => model.Type)
            </td>
            <td class="text-center">
                @Html.DisplayFor(model => model.Description)
            </td>
            <td class="text-center">
                @Html.DisplayFor(model => model.Hour)
            </td>
            <td class="text-center">
                @Html.DisplayFor(model => model.Date)
            </td>
        </tr>

    </table>
    <br />


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions text-danger bi bi-trash3-fill">
            <input type="submit" value="Cancelar" class="btn btn-outline-danger " />

        </div>
    }
</div>
