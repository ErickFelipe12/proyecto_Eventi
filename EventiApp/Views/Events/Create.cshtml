@model EventiApp.Models.Event
@Styles.Render("~/Content/Site.css")
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

@{
    ViewBag.Title = "Crear evento";
}

<h2 class="text-center">Nuevo Evento</h2>

<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="align-content-center" style="position:relative; left:170px;">

        <br />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        






         <div class="row pt-2">
            <div class="form-group col-md-4 ">



                <div class="col-md-12">
                    <i class="bi bi-geo-alt-fill">Lugar Evento</i>
                    @Html.EditorFor(model => model.Place, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Place, "", new { @class = "text-danger" })
                </div>

            </div>
            <br />
            <div class="form-group  col-md-4">


                <div class="col-md-12 bi">
                    <i class="bi bi-shop-window"> Tipo de Evento</i>

                    @Html.EditorFor(model => model.Type, new { htmlAttributes = new { @class = "form-control" } })

                    @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
                </div>
                <br />
            </div>
        </div>

        <div class="row pt-2">

            <div class="form-group  col-md-4">


                <div class="col-md-12">
                    <i class="bi bi-calendar-event"> Fecha </i>

                    @*@Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })*@
                    @*<input type="date" name="@Model.Date" class="form-control"/>*@
                    @Html.TextBoxFor(model => model.Date, new { @type = "date", @class = "form-control datepicker" })
                    @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group col-md-4 ">


                <div class="col-md-12">
                    <i class="bi bi-clock-history"> Hora </i>
                    @*@Html.EditorFor(model => model.Hour, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.TextBoxFor(model => model.Hour, new { @type = "time", @class = "form-control datepicker" })
                    @Html.ValidationMessageFor(model => model.Hour, "", new { @class = "text-danger" })
                </div>
                <br />
            </div>
        </div>





        <div class="form-group  col-md-8">
            Descripción
            <div class="col-md-12">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>


        <br />
        <div class="form-group py-3" style="position:relative; left:57%;">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-lg btn-outline-success " />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
