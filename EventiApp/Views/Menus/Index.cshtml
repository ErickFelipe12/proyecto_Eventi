@model IEnumerable<EventiApp.Models.Menu>

@{
    ViewBag.Title = "Menú del Evento";
    var idEvent = Url.RequestContext.RouteData.Values["id"];
}

<h2>Menú del Evento</h2>

<p>
    @if (Model.Count() < 3)
    {
        @Html.ActionLink("Nuevo Menú", "Create", new { id = idEvent }, new { @class = "btn btn-primary" })

    }
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
           Seleccionado
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
      
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
          <td>
            @Html.DisplayFor(modelItem => item.MenuSelections.Count)
        </td>
          <td>
              @Html.ActionLink("Editar", "Edit", new { id = item.IdMenu }, new { @class = "btn btn-primary " })
              @Html.ActionLink("Detalle", "Details", new { id = item.IdMenu }, new { @class = "btn btn-warning mx-3" })
              @Html.ActionLink("Eliminar", "Delete", new { id = item.IdMenu }, new { @class = "btn btn-danger" })
              @*@Html.ActionLink("Delete", "Delete", new { id=item.IdMenu })*@
          </td>
    </tr>
}

</table>
