@model IEnumerable<EventiApp.Models.Document>

@{
    ViewBag.Title = "Tipos de Documentos";
}

<h2>Tipo de Documentos</h2>

<p>
    @Html.ActionLink("Nuevo registro", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DocumentType)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DocumentType)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IdDocumentType }, new { @class = "btn btn-warning" }) 
        </td>
    </tr>
}

</table>
