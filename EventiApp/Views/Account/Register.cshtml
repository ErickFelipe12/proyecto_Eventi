@model EventiApp.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrate";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
  
}

<div class="row vh-100  align-items-center px-lg-5">


    <div class="col-md-7 text-center">
        <img src="~/Content/img/Logo.png" width="300" />

        <h1 class="p-4 fw-bold">Haz parte de nosotros</h1>
        

    </div>

    <div class="col-md-5 ">
        <div class=" text-center mb-4">
            <img src="~/Content/img/user.png" width="80" />

            <h2> <span class="icon-bar"></span> Registro</h2>
        </div>

        <div class="card ">
            <div class="card-body">


                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    <hr />
                    @Html.ValidationSummary("", new { @class = "text-danger" })

                    <div class="row pt-2">
                        <div class="form-group col-md-6">
                            @Html.LabelFor(model => model.IdDocumentType, "Tipo Documento", htmlAttributes: new { @class = "control-label col-md-12" })

                            <div class="col-md-12">
                                @Html.DropDownList("IdDocumentType", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.IdDocumentType, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group  col-md-6">
                            @Html.LabelFor(m => m.Identification, new { @class = "col-md-12 control-label" })
                            <div class="col-md-12">
                                @Html.TextBoxFor(m => m.Identification, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <div class="row pt-2">
                        <div class="form-group col-md-6">
                            @Html.LabelFor(m => m.Name, new { @class = "col-md-12 control-label" })
                            <div class="col-md-12">
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group  col-md-6">
                            @Html.LabelFor(m => m.LastName, new { @class = "col-md-12 control-label" })
                            <div class="col-md-12">
                                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <div class="row pt-2">
                        <div class="form-group col-md-6">
                            @Html.LabelFor(m => m.Phone, new { @class = "col-md-12 control-label" })
                            <div class="col-md-12">
                                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group  col-md-6">
                            @Html.LabelFor(m => m.Email, new { @class = "col-md-12 control-label" })
                            <div class="col-md-12">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="row pt-2">
                        <div class="form-group col-md-6">
                            @Html.LabelFor(m => m.Password, new { @class = "col-md-12 control-label" })
                            <div class="col-md-12">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-12 control-label" })
                            <div class="col-md-12">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group text-center">
                        <div class="col-md-offset-2 col-md-12 mt-3">
                            <input type="submit" class="btn btn-lg btn-warning" value="Registrarse" />
                        </div>
                    </div>
                    <p class="float-end">
                        @Html.ActionLink("Iniciar Session", "Login")
                    </p>
                }
            </div>
        </div>
    </div>
        </div>


        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
