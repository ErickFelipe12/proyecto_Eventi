@using Microsoft.AspNet.Identity
@model EventiApp.Models.Employee
@using (Html.BeginForm("Employees", "Users", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
{
    @Html.AntiForgeryToken()
    <dt>Información adicional del empleado : </dt>
    <div class="form-horizontal">


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdUser)
        @Html.HiddenFor(model => model.IdEmployee)
        <div class="form-group  col-md-3">
            @Html.LabelFor(model => model.Position, htmlAttributes: new { @class = "control-label col-md-12" })
            <div class="col-md-12 ">
                @Html.EditorFor(model => model.Position, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Position, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group pt-3">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Actualizar Cargo" class="btn btn-primary" />

            </div>
        </div>
    </div>
}
