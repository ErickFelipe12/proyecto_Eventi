@using Microsoft.AspNet.Identity
@model EventiApp.Models.Client
@using (Html.BeginForm("Client", "Users", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
{
    @Html.AntiForgeryToken()
    <dt style="position:relative; left:220px;">Información adicional Cliente: </dt>
    <br />
    
    <div class="form-horizontal" style="position:relative; left:110px; ">


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdUser)
        @Html.HiddenFor(model => model.IdClient)



      


        
        <div class="row pt-2">
        <div class="form-group col-md-4" style="position:relative; left:115px;">

            Dirección :

            <div class="col-md-9">
                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group  col-md-4" style="position:relative;left:15px;">
             
            N° Empleados :
            <div class="col-md-3">
                @Html.EditorFor(model => model.NumberEmployees, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NumberEmployees, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>



        


        <div class="form-group pt-3" style="position:relative; left:115px;">
            <div class="col-md-offset-2 col-md-10 text-primary">
                <input type="submit" value="" class="btn btn-outline-primary" />

            </div>
        </div>
    </div>
}
