<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Eventi</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Site.css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://kit.fontawesome.com/05b0d5fb4c.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.1/font/bootstrap-icons.css">
</head>
<body class="bodyContent">
    <header>
        <div class="row">
            <div class="col-1">

            </div>
            <div class="col-10 text-center">
                <img src="~/Content/img/LogoE.png" width="140" padding="15px" />
            </div>
            <div class="col-1">

            </div>
        </div>

    </header>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar-->
        <br />
        <div class="border-end bg-white" id="sidebar-wrapper" style="min-width:200px">
            <br />
            <div class="sidebar-heading border-bottom bg-light text-center p-3">
                @Html.Partial("_LoginPartial")
            </div>
            <br />
            <br />

            <div class="list-group list-group-flush">

                <!---<a class="list-group-item list-group-item-action list-group-item-light " href="@Url.Action("Index", "Home")">

                    <i class="bi bi-house-door-fill"></i>
                    Home
                </a>-->


                @if (this.User.IsInRole(EventiApp.Models.Enums.RolesEnum.Client))
                {
                    <a class="list-group-item list-group-item-action list-group-item-light " href="@Url.Action("Create", "Events")">
                        <i class="bi bi-calendar-check"></i> Nuevo Evento
                    </a>
                }

                <a class="list-group-item list-group-item-action list-group-item-light " href="@Url.Action("Index", "Events")">
                    <i class="bi bi-check-all"></i>
                    Tus Eventos
                </a>

                <a class="list-group-item list-group-item-action list-group-item-light " href="@Url.Action("NextEvent", "Events")">
                    <i class="bi-alarm"></i> Proximos Eventos
                </a>

                @*<a class="list-group-item list-group-item-action list-group-item-light " href="@Url.Action("Index", "Home")">
            <i class="bi bi-chat-left-fill"></i> Opiniones
        </a>*@

                @* <a class="list-group-item list-group-item-action list-group-item-light " href="@Url.Action("Contact", "Home")">
           <i class="bi bi-telephone-fill"></i> Contactanos
        </a>*@



                <a class="list-group-item list-group-item-action list-group-item-light " href="@Url.Action("Index", "Manage")">
                    <i class="bi bi-gear-fill"></i>  Cuenta
                </a>

                <a class="list-group-item list-group-item-action list-group-item-light " href="@Url.Action("about", "Home")">
                    <i class="bi bi-question-lg"></i> Sobre Nosotros
                </a>

                @if (this.User.IsInRole(EventiApp.Models.Enums.RolesEnum.Administrator))
                {
                    <!--- <a class="list-group-item list-group-item-action list-group-item-light " href="@Url.Action("Index", "Documents")">
            <i class="bi bi-gear-fill"></i>  Documentos
        </a>-->
                    <a class="list-group-item list-group-item-action list-group-item-light " href="@Url.Action("Index", "Users")">
                        <i class="bi bi-people-fill"></i>  Usuarios
                    </a>
                }

                @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                {
                    @Html.AntiForgeryToken()
                    <a class="list-group-item  border-bottom list-group-item-action list-group-item-light "
                       href="javascript:document.getElementById('logoutForm').submit()">
                        <i class="bi bi-box-arrow-left"></i>
                        Salir
                    </a>
                }

            </div>
        </div>
        <!-- Page content wrapper-->
        <div id="page-content-wrapper" style="width: 100%">
            <!-- Page content-->
            <div class="container-fluid p-5">
                @RenderBody()
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />
    <br />
    
    

