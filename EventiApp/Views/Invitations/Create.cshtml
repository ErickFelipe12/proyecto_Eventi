@model EventiApp.Models.Invitation

@{
    ViewBag.Title = "Crear Invitación";
}

<h2>Crear Invitación</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
          @Html.HiddenFor(model => model.IdEvent)
        
        <div class="form-group">
            @Html.LabelFor(model => model.EmailEmployee, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.EmailEmployee, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.EmailEmployee, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group py-3">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Enviar" class="btn btn-lg btn-primary" />
                @Html.ActionLink("Volver", "Index", new { id = Model.IdEvent}, new { @class = "btn btn-lg btn-danger" })
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
